{% else %}

	<!-- Button trigger modal -->
	<button 
		type="button" 
		data-toggle="modal" 
		data-target="#alertMealModal"
		class="alert-{{ dishOrFoodId }} flex justify-start advice text-sm font-bold w-full text-left cursor-pointer"
		data-action="click->alert-meal-modal#showMessages"
		data-url="{{ path('alert_meal_list', {
			'class': class,
			'dishOrFoodId': dishOrFoodId,
			'isSelected': isSelected|default(0),
			'rankMeal': rankMeal,
			'rankDish': rankDish
		}) }}"
		type="button"
		data-alert-color="{{ alerts.higher_level.color }}"
		data-alert-text="{{ alerts.higher_level.text }}"
	>
		
		<span class="rounded-full flex items-center justify-center" style="border: 1px solid {{ alerts.higher_level.color }}; width: 40px; height: 40px">
			<svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M12 5L12 14" stroke="{{ alerts.higher_level.color }}" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"></path> <path d="M13.8417 18.8417C13.8417 19.8588 13.0171 20.6833 12 20.6833C10.9829 20.6833 10.1583 19.8588 10.1583 18.8417C10.1583 17.8245 10.9829 17 12 17C13.0171 17 13.8417 17.8245 13.8417 18.8417Z" fill="{{ alerts.higher_level.color }}"></path> </g></svg>			{# <span class="flex md:uppercase px-2 py-1 text-xs md:text-xs font-bold mr-3 text-white bg-opacity-70 rounded-lg" style="background-color: {{ alerts.higher_level.color }}">{{ alerts.higher_level.text }}</span> #}
		</span>

	</button>

{% endif %}

