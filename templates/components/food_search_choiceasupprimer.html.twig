            data-model="query"
            {# data-action="live#update" #}
            placeholder="Exple: Miel, cÃ´te de porc..."
            class="w-full"
        >
    </div>

    <div class="flex flex-wrap shadow-md bg-white absolute top-12" data-loading="addClass(opacity-50)">     
        {% if this.foods|length > 0 %}   
            {% for food in this.foods %}
