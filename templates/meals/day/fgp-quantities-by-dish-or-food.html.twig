
{# {{ true == app.debug ? "<span class='text-sm'>fgp-quantities-by-dish-or-food.html.twig</span>"|raw : '' }} #}

{% for foodGroupParent in foodGroupParents %}

    <div class="flex items-center justify-center w-8">

        {% set in = false %}

        {% if type == 'Dish' %}

            {% for dishFoodGroupParent in dishOrFood.dishFoodGroupParents %}

                {% if dishFoodGroupParent.foodGroupParent.id == foodGroupParent.id %}

                    {% set in = true %}

                    <div style="background-color: {{ foodGroupParent.color }}" class="flex text-white text-sm font-bold w-5 h-5 rounded-full justify-center items-center">
                        {# <span>{{ quantities[foodGroupParent.alias]|round() }}</span> #}
                    </div>

                {% endif %}

            {% endfor %}

        {% else %}

            {% if dishOrFood.foodGroup.parent.id == foodGroupParent.id %}

                {% set in = true %}

                <div style="background-color: {{ foodGroupParent.color }}" class="flex text-white text-sm font-bold w-5 h-5 rounded-full justify-center items-center">
                    {# <span>{{ quantities[foodGroupParent.alias] }}</span> #}
                </div>

            {% endif %}
        
        {% endif %}
        
        {% if in == false %}
            <div style="background-color: {{ foodGroupParent.color }}" class="text-white font-bold w-5 h-5 rounded-full opacity-20"></div>
        {% endif %}

    </div>

{% endfor %}