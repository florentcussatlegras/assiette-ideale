<a href="{{ path(category.route) }}" class="dashboard_category-grid col-span-6 xl:col-span-2 relative">

    <div class="card-wrapper card-space-user flex flex-col items-center justify-between gap-4 relative py-8 px-4 h-full bg-white border-gray-200 rounded-xl shadow-lg">

        {# Badge statut repas du nour saisi/pas saisi #}
        {% if category.title == 'dashboard.category.meal_day' %}
            <div class="absolute top-3 right-3">
                {% if countMealsDay > 0 %}
                    <span class="status-badge status-done">{{ countMealsDay }} saisi{{ countMealsDay > 1 ? 's' }}</span>
                {% else %}
                    <span class="status-badge status-pending">Ã€ saisir</span>
                {% endif %}
            </div>
        {% endif %}

        <img src={{ asset("images/#{category.picto}") }} />
       
        <span class="flex gap-2 font-bold items-center text-base text-center text-sky-600">
            {{ category.title|trans({}, 'dashboard')|upper }}
        </span>

    </div>

</a>