{% block _dish_stepRecipes_entry_description_row %}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}
    <div class="mt-2 flex flex-col">
        {{- form_label(form) -}}
        {{- form_widget(form, widget_attr) -}}
        {{- form_errors(form) -}}
        {{- form_help(form) -}}
    </div>
{% endblock %}

{% block _dish_stepRecipes_entry_description_errors %}
    {%- if errors|length > 0 -%}
        <div class="flex flex-col">
            {%- for error in errors -%}
                <span class="{{ error_item_class|default('text-red-700') }}">{{ error.message }}</span>
            {%- endfor -%}
        </div>
    {%- endif -%}
{% endblock _dish_stepRecipes_entry_description_errors %}





