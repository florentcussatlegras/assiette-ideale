
<input id="startFromWeekMenu" type="hidden" value="{{ start|default(null) }}" />
<input id="endFromWeekMenu" type="hidden" value="{{ end|default(null) }}" />

<div class="font-medium text-center relative">

    <div class="flex flex-col xl:flex-row items-start xl:items-center tabs-date-range gap-2">

        <div class="px-0 md:px-2 date-picker text-xl">
          
            <form class="flex flex-flex-row items-center gap-2 mb-2 md:mb-0">

                <div class="flex flex-row items-center">

                    <span class="mr-2 text-sm lg:text-lg">Du</span>
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none px-3">
                            <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                            </svg>
                        </div>
                        <input 
                            id="startDate"
                            name="start" 
                            type="text" 
                            class="pl-10 border border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5 rounded-lg" 
                            placeholder="Date de départ"
                            data-balance-sheet-target="start"
                        >
                    </div>

                </div>

                <div class="flex flex-row items-center">
                    <span class="mr-2 text-sm lg:text-lg">au</span>
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none px-3">
                            <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                            </svg>
                        </div>
                        <input 
                            id="endDate"
                            name="end" 
                            type="text" 
                            class="pl-10 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5 rounded-lg" 
                            placeholder="Date de fin"
                            data-balance-sheet-target="end"
                        >
                    </div>
                </div>


                <button
                    id="validateDates"
                    type="button" 
                    class="bg-sky-600 hover:bg-sky-700 transition duration-300 text-white font-semibold text-sm lg:text-lg cursor-pointer rounded-lg px-4 py-3"
                    data-action="balance-sheet#setDates"
                >
                    Valider
                </button>
            </form>
          
        </div>

        <div class="flex flex-col gap-2 md:flex-row w-full items-stretch xl:ml-12">
            <button
                class="inline-block px-4 py-3 font-semibold tabs-date-range_tab bg-gray-100 text-gray-900 hover:text-white hover:bg-gray-200 transition-colors duration-300 mr-0 md:mr-3 rounded-lg text-sm lg:text-lg leading-4 cursor-pointer"
                data-balance-sheet-target="defaultDate"
                data-action="click->balance-sheet#setDates"
                data-start="{{ "-1 day"|date('m/d/Y') }}"
                data-end="{{ "-1 day"|date('m/d/Y') }}"
            >
                Hier
            </button>
            <button 
                href="#" 
                class="inline-block px-4 py-3 font-semibold tabs-date-range_tab bg-gray-100 text-gray-900 hover:text-white hover:bg-gray-200 transition-colors duration-300 mr-0 md:mr-3 rounded-lg text-sm lg:text-lg leading-4 cursor-pointer"
                data-action="click->balance-sheet#setDates"
                data-start="{{ "-1 week"|date('m/d/Y') }}"
                data-end="{{ "yesterday"|date('m/d/Y') }}"
            >
                La dernière semaine
            </button>
            <button 
                href="#" 
                class="inline-block px-4 py-3 font-semibold tabs-date-range_tab bg-gray-100 text-gray-900 hover:text-white hover:bg-gray-200 transition-colors duration-300 mr-0 md:mr-3 rounded-lg text-sm lg:text-lg leading-4 cursor-pointer"
                data-action="click->balance-sheet#setDates"
                data-start="{{ "-2 weeks"|date('m/d/Y') }}"
                data-end="{{ "yesterday"|date('m/d/Y') }}"
            >
                Les deux dernières semaines
            </button>
            <button 
                href="#" 
                class="inline-block px-4 py-3 font-semibold tabs-date-range_tab bg-gray-100 text-gray-900 hover:text-white hover:bg-gray-200 transition-colors duration-300 mr-0 md:mr-3 rounded-lg text-sm lg:text-lg leading-4 cursor-pointer"
                aria-current="page"
                data-action="click->balance-sheet#setDates"
                data-start="{{ "-1 month"|date('m/d/Y') }}"
                data-end="{{ "yesterday"|date('m/d/Y') }}"
            >
                Le dernier mois
            </button>
            <button 
                href="#" 
                class="inline-block px-4 py-3 font-semibold tabs-date-range_tab bg-gray-100 text-gray-900 hover:text-white hover:bg-gray-200 transition-colors duration-300 mr-0 md:mr-3 rounded-lg text-sm lg:text-lg leading-4 cursor-pointer"
                data-action="click->balance-sheet#setDates"
                data-start="{{ "-1 year"|date('m/d/Y') }}"
                data-end="{{ "yesterday"|date('m/d/Y') }}"
            >
                La dernière année
            </button>
        </div>

    </div>

    <div class="tabs-date-range_smart-bar w-0 bg-dark-blue" style="height:2px"></div>

</div>