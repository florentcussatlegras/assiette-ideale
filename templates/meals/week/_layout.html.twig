<div class="flex flex-col lg:flex-row items-start justify-start lg:items-center lg:justify-between gap-2 lg:gap-0 mb-6">

	<div class="flex flex-row items-center">

		<button 
			class="flex lg:hidden items-center justify-center rounded-full text-gray-700 bg-gray-200 hover:bg-gray-300 p-2 btn-nav-week cursor-pointer"
			data-starting-date="{{ days|keys|first|date_modify('-7 days')|date('Y-m-d') }}" 
			data-action="menu-week#reloadMenu"
			data-format="mobile"
		>
			<svg class="w-4" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
			</svg>
		</button>

		<button 
			class="my-hidden lg:flex flex items-center justify-center rounded-full text-gray-700 bg-gray-200 hover:bg-gray-300 p-2 btn-nav-week cursor-pointer"
			data-starting-date="{{ days|keys|first|date_modify('-7 days')|date('Y-m-d') }}" 
			data-action="menu-week#reloadMenu"
		>
			<svg class="w-4" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
			</svg>
		</button>

		<div id="titleMenuWeek" class="text-gray-800 font-bold rounded-full py-2 px-4 text-sm md:text-base">
			{{ "%s au %s"|format(days|keys|first|format_date('full', locale='fr')|capitalize, days|keys|last|format_date('full', locale='fr')|capitalize) }}
		</div>

		<button
			class="flex lg:hidden items-center justify-center rounded-full text-gray-700 bg-gray-200 hover:bg-gray-300 p-2 btn-nav-week cursor-pointer transition duration-300"
			data-starting-date="{{ days|keys|last|date_modify('+1 day')|date('Y-m-d') }}" 
			data-action="menu-week#reloadMenu"
			data-format="mobile"
		>
			<svg class="w-4" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
			</svg>
		</button>

		<button
			class="my-hidden lg:flex items-center justify-center rounded-full text-gray-700 bg-gray-200 hover:bg-gray-300 p-2 btn-nav-week cursor-pointer transition duration-300"
			data-starting-date="{{ days|keys|last|date_modify('+1 day')|date('Y-m-d') }}" 
			data-action="menu-week#reloadMenu"
		>
			<svg class="w-4" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
			</svg>
		</button>

	</div>

	<a href="{{ path('app_balance_sheet_index', { start: days|keys|first|date('Y-m-d'), end: days|keys|last|date('Y-m-d') }) }}" class="rounded-lg py-2 px-4 bg-gray-200 text-sky-600 hover:text-sky-700 font-semibold lg:ml-auto flex items-center text-sm md:text-base leading-3 transition duration-300">
		<svg class="w-6 h-6 text-light-blue mr-2" fill="none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
			<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
				d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
		</svg>
		Voir le bilan complet de cette semaine
	</a>

	<div class="flex lg:ml-auto gap-2 items-center">

		{{ render(controller('App\\Controller\\meal\\SearchController::searchWeekMenu')) }}

	</div>

</div>

{% block table_menu_week %}{% endblock %}