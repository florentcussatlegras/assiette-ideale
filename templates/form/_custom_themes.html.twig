{% use 'tailwind_2_layout.html.twig' %}

{%- block form_label -%}
    {%- set label_attr = label_attr|merge({ class: label_attr.class|default(label_class|default('block')) }) -%}
    {{- parent() -}}
{%- endblock form_label -%}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <ul class="w-full list-none">
            {%- for error in errors -%}
                <li class="{{ error_item_class|default('flex items-start text-left text-red-700 my-1') }}">
                    {# <i class="w-4 h-4 mr-2" data-feather="alert-circle"></i> #}
                    <span>{{ error.message }}</span>
                </li>
            {%- endfor -%}
        </ul>
    {%- endif -%}
{%- endblock form_errors -%}

